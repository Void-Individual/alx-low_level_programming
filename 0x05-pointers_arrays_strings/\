#include "main.h"
#include <stdio.h>

/**
 * print_array - a function that prints n elements of an array of integers,
 * followed by a new line.
 * @a: variable for the pointer
 * @n: variable for the number of elements
 */

void print_array(int *a, int n)
{
	while (n >= 0)
	{
		if (a[n] == '\0')
			break;

		printf("%d", a[n]);
		printf(" ,");
		n++;
	}
}
